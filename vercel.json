{
  "version": 2,
  "routes": [
    { "src": "^/series/page/([0-9]+)?$", "dest": "/api/series/page/index.js?page=$1" },
    { "src": "^/series/(.*)$", "dest": "/api/series/[slug].js?slug=$1" },

    { "src": "^/movies/page/([0-9]+)?$", "dest": "/api/movies/page/index.js?page=$1" },
    { "src": "^/movies/(.*)$", "dest": "/api/movies/[slug].js?slug=$1" },

    { "src": "^/video/(.*)$", "dest": "/api/video.js?id=$1" },

    { "src": "/", "dest": "/api/index.js" }
  ]
}
