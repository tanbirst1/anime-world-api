{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "memory": 256,
      "maxDuration": 20
    }
  },
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/movies/(?<slug>.*)", "dest": "/api/movies/[slug]" },
    { "src": "/series/(?<slug>.*)", "dest": "/api/series/[slug]" },
    { "src": "/", "dest": "/api/index" }
  ]
}
