{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "memory": 256,
      "maxDuration": 20
    }
  },
  "routes": [
    {
      "src": "/movies/(?<slug>.*)",
      "dest": "/api/movies/[slug].js"
    },
    {
      "src": "/series/(?<slug>.*)",
      "dest": "/api/series/[slug].js"
    },
    {
      "src": "/",
      "dest": "/api/index.js"
    }
  ]
}
