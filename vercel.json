{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "memory": 512,
      "maxDuration": 20
    }
  },
  "routes": [
    {
      "src": "^/series/(?<slug>.*)$",
      "dest": "api/series/[slug].js"
    },
    {
      "src": "^/movies/(?<slug>.*)$",
      "dest": "api/movies/[slug].js"
    },
    {
      "src": "/",
      "dest": "api/index.js"
    }
  ]
}
