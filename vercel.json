{
  "version": 2,
  "functions": {
    "api/movies/slug.py": {
      "runtime": "vercel-python@0.5.0"
    }
  },
  "routes": [
    { "src": "^/series/page/?$",             "dest": "/api/series/page.js" },
    { "src": "^/series/page/([0-9]+)$",      "dest": "/api/series/page.js?page=$1" },
    { "src": "^/series/(.*)$",               "dest": "/api/series/[slug].js?slug=$1" },

    { "src": "^/movies/page/?$",             "dest": "/api/movies/page.js" },
    { "src": "^/movies/page/([0-9]+)$",      "dest": "/api/movies/page.js?page=$1" },
    { "src": "^/movies/(.*)$",               "dest": "/api/movies/slug.py?slug=$1" },

    { "src": "^/search/(.*)$",               "dest": "/api/search/[name].js?name=$1" },

    { "src": "^/v/(.*)$",                    "dest": "/api/video.js?id=$1" },
    { "src": "/",                            "dest": "/api/index.js" }
  ]
}
