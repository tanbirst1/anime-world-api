{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "memory": 256,
      "maxDuration": 20
    }
  },
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/movies/([^/]+)$", "dest": "/api/movies/[slug].js" },
    { "src": "^/series/([^/]+)$", "dest": "/api/series/[slug].js" },
    { "src": "^/$", "dest": "/api/index.js" }
  ]
}
