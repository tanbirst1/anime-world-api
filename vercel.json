{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "^/movies/(.*)$",
      "dest": "/api/movies/$1"
    },
    {
      "src": "^/series/(.*)$",
      "dest": "/api/series/$1"
    },
    {
      "src": "^/$",
      "dest": "/api/home.js"
    }
  ]
}
